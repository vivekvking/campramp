<%-include('partials/header')%>
<div class="container">
    <h1 style="text-align: center">Add New Comment</h1>
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <form method="POST" action="/campgrounds/<%=ID%>/comment">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Your name" name="comment[author]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
                </div>
            </form>
            <a href="/campgrounds/<%=ID%>">Go Back</a>
        </div>
    </div>
</div>

<%-include('partials/footer')%>