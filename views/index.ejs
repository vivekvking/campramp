<%- include('partials/header') %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>This is campgrounds page</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <a class="btn btn-primary btn-sm" href="/campgrounds/new">Add New Campgrounds</a>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;" >
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= camp.image %>">
                </div>
                <div class="captions">
                    <h4><%= camp.name %></h4>
                    <a class="btn btn-primary btn-sm" href="/campgrounds/<%= camp._id%>">More Info</a>
                </div>
            </div>
        <% }) %>
    </div>
</div> 

<%- include('partials/footer') %>
