<%- include('partials/header') %>
<div class="container">
    <h1 style="text-align: center">Create a New Campground</h1>
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter Camp Name" name="namen">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter image url" name="imagen">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="descriptionn">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
</div>

<%- include('partials/footer') %>